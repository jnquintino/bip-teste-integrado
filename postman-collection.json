              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fromId\": 1,\n  \"toId\": 1,\n  \"valor\": 100.00\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/beneficios/transferir",
              "host": ["{{baseUrl}}"],
              "path": ["beneficios", "transferir"]
            },
            "description": "Tenta transferir para o mesmo benefício (deve falhar)"
          },
          "response": []
        }
      ]
    },
    {
