{
  "info": {
    "name": "Sistema de Benefícios - API Collection",
    "description": "Collection completa para testar todas as funcionalidades da API de Benefícios",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/api/v1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Benefícios",
      "item": [
        {
          "name": "1. Listar todos os benefícios",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/beneficios",
              "host": ["{{baseUrl}}"],
              "path": ["beneficios"]
            },
            "description": "Lista todos os benefícios ativos"
          },
          "response": []
        },
        {
          "name": "2. Criar novo benefício",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"Benefício Teste\",\n  \"descricao\": \"Descrição do benefício teste\",\n  \"valor\": 1000.00,\n  \"ativo\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/beneficios",
              "host": ["{{baseUrl}}"],
              "path": ["beneficios"]
            },
            "description": "Cria um novo benefício"
          },
          "response": []
        },
        {
          "name": "3. Buscar benefício por ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/beneficios/1",
              "host": ["{{baseUrl}}"],
              "path": ["beneficios", "1"]
            },
            "description": "Busca um benefício específico pelo ID"
          },
          "response": []
        },
        {
          "name": "4. Atualizar benefício",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nome\": \"Benefício Atualizado\",\n  \"descricao\": \"Descrição atualizada\",\n  \"valor\": 1500.00,\n  \"ativo\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/beneficios/1",
              "host": ["{{baseUrl}}"],
              "path": ["beneficios", "1"]
            },
            "description": "Atualiza um benefício existente"
          },
          "response": []
        },
        {
          "name": "5. Buscar benefícios por nome",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/beneficios/buscar?nome=Teste",
              "host": ["{{baseUrl}}"],
              "path": ["beneficios", "buscar"],
              "query": [
                {
                  "key": "nome",
                  "value": "Teste"
                }
              ]
            },
            "description": "Busca benefícios que contenham o nome especificado"
          },
          "response": []
        },
        {
          "name": "6. Excluir benefício (lógico)",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/beneficios/1",
              "host": ["{{baseUrl}}"],
              "path": ["beneficios", "1"]
            },
            "description": "Marca um benefício como inativo (exclusão lógica)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Transferências",
      "item": [
        {
          "name": "1. Transferir entre benefícios - Sucesso",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fromId\": 1,\n  \"toId\": 2,\n  \"valor\": 100.00\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/beneficios/transferir",
              "host": ["{{baseUrl}}"],
              "path": ["beneficios", "transferir"]
            },
            "description": "Transfere valor entre dois benefícios"
          },
          "response": []
        },
        {
          "name": "2. Transferir - Saldo insuficiente",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fromId\": 1,\n  \"toId\": 2,\n  \"valor\": 10000.00\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/beneficios/transferir",
              "host": ["{{baseUrl}}"],
              "path": ["beneficios", "transferir"]
            },
            "description": "Tenta transferir valor maior que o saldo disponível"
          },
          "response": []
        },
        {
          "name": "3. Transferir - Mesmo benefício",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
